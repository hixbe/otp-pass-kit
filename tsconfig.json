{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "esnext",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "outDir": "dist",
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}